rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // User profile images - users can read/write their own images
    match /users/{userId}/{allPaths=**} {
      allow read: if true; // Public read access for profile images
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Itinerary images - users can read/write images for their itineraries
    match /itineraries/{userId}/{allPaths=**} {
      allow read: if true; // Public read access for itinerary images
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Deal images - authenticated users can upload, public read access
    match /deals/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // General authenticated user access for other files
    match /{allPaths=**} {
      allow read, write: if request.auth != null;
    }
  }
}

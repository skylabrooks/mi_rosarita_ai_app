{
  "include": [
    "src/**/*"
  ],
  "extends": "@react-native/typescript-config/tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "types": ["@types/react", "node"],
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "paths": {
      "@/*": ["src/*"]
    }
  }
}